#include <ESP8266WiFi.h>
#include <PubSubClient.h>
#include <Servo.h>

// ------------------ CONFIGURAÇÕES WIFI E MQTT ------------------
const char* ssid = "SEU_SSID";       // substitua pelo seu Wi-Fi
const char* password = "SUA_SENHA";
const char* mqtt_server = "broker.hivemq.com"; // broker público de teste

WiFiClient espClient;
PubSubClient client(espClient);

// ------------------ PINOS ------------------
const int pirPin = D1;      // sensor PIR
const int trigPin = D2;     // sensor ultrassônico Trigger
const int echoPin = D3;     // sensor ultrassônico Echo
const int servoPin = D4;    // servo motor SG90

Servo servo;

// ------------------ VARIÁVEIS ------------------
unsigned long lastPublish = 0; // tempo da última publicação MQTT

// ------------------ FUNÇÃO SETUP ------------------
void setup() {
  Serial.begin(115200);

  pinMode(pirPin, INPUT);
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);

  servo.attach(servoPin);
  servo.write(0); // posição inicial

  // Conecta ao Wi-Fi
  WiFi.begin(ssid, password);
  Serial.print("Conectando ao Wi-Fi");
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("Conectado ao Wi-Fi!");

  // Configura MQTT
  client.setServer(mqtt_server, 1883);
}

// ------------------ FUNÇÃO LOOP ------------------
void loop() {
  if (!client.connected()) {
    reconnect();
  }
  client.loop();

  unsigned long now = millis();
  if (now - lastPublish > 1000) { // publica a cada 1s
    lastPublish = now;

    // --------- SENSOR PIR ---------
    int pirState = digitalRead(pirPin);
    if (pirState == HIGH) {
      // Aciona servo motor
      servo.write(90);  // aciona mecanismo
      delay(500);       // tempo de dispensação
      servo.write(0);   // retorna posição inicial
      client.publish("dispensador/status", "Gel dispensado");
    }

    // --------- SENSOR ULTRASSÔNICO ---------
    long duration;
    float distance;
    digitalWrite(trigPin, LOW);
    delayMicroseconds(2);
    digitalWrite(trigPin, HIGH);
    delayMicroseconds(10);
    digitalWrite(trigPin, LOW);

    duration = pulseIn(echoPin, HIGH);
    distance = (duration * 0.034) / 2; // cm

    if (distance > 10) {
      client.publish("dispensador/nivel", "Refil necessário");
    } else {
      client.publish("dispensador/nivel", "Gel OK");
    }

    // --------- LOG NO SERIAL MONITOR ---------
    Serial.print("PIR: "); Serial.print(pirState);
    Serial.print(" | Distancia: "); Serial.println(distance);
  }
}

// ------------------ FUNÇÃO RECONNECT MQTT ------------------
void reconnect() {
  while (!client.connected()) {
    Serial.print("Conectando ao MQTT...");
    if (client.connect("ESP8266_Dispensador")) {
      Serial.println("Conectado ao MQTT!");
    } else {
      Serial.print("Falhou, rc=");
      Serial.print(client.state());
      delay(2000);
    }
  }
}
